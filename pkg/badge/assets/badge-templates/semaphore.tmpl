<svg height="20" width="{{.TotalWidth}}" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1">
	<clipPath id="a">
		<rect height="20" width="{{.TotalWidth}}" rx="2"/>
	</clipPath>
	<g clip-path="url(#a)">
		<path d="M0 0h{{.SubjectWidth}}v20H0z" fill="#f1f1f1"/>
		<path d="M{{.SubjectWidth}} 0h{{.StatusWidth}}v20H{{.SubjectWidth}}z" fill="{{.Color}}"/>
	</g>
	<g font-family="Verdana,sans-serif" font-size="{{.FontSize}}">
		<text fill="{{.SubjectFontColor}}" textLength="{{.SubjectTextWidth}}" x="{{.SubjectOffset}}" y="13">{{.Subject}}</text>
		<text fill="{{.StatusFontColor}}" textLength="{{.StatusTextWidth}}" x="{{.StatusOffset}}" y="13">{{.Status}}</text>
	</g>
</svg>
