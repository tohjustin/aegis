<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="{{add .SubjectWidth .StatusWidth}}" height="20">
	<clipPath id="a">
		<rect width="{{add .SubjectWidth .StatusWidth}}" height="20" rx="2"/>
	</clipPath>
	<g clip-path="url(#a)">
		<path fill="#f1f1f1" d="M0 0h{{.SubjectWidth}}v20H0z"/>
		<path fill="{{.Color}}" d="M{{.SubjectWidth}} 0h{{.StatusWidth}}v20H{{.SubjectWidth}}z"/>
	</g>
	<g font-family="Verdana,sans-serif" font-size="{{multiply .FontSize 10}}">
		<text x="{{multiply .SubjectOffset 10}}" transform="scale(.1)" y="130" fill="#888" textLength="{{multiply .SubjectTextWidth 10}}">{{.Subject}}</text>
		<text x="{{multiply .StatusOffset 10}}" transform="scale(.1)" y="130" fill="#fff" textLength="{{multiply .StatusTextWidth 10}}">{{.Status}}</text>
	</g>
</svg>
